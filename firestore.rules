rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);

      match /{document=**} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }

    match /publicProfiles/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    match /friendRequests/{requestId} {
      allow create: if isSignedIn() &&
        request.resource.data.fromUserId == request.auth.uid;
      allow read: if isSignedIn() &&
        (resource.data.fromUserId == request.auth.uid ||
         resource.data.toUserId == request.auth.uid);
      allow update, delete: if isSignedIn() &&
        (resource.data.fromUserId == request.auth.uid ||
         resource.data.toUserId == request.auth.uid);
    }

    match /analyticsDaily/{dayId} {
      allow read: if false;
      allow write: if isSignedIn();
    }

    match /groupInvites/{inviteCode} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /groups/{groupId} {
      allow read: if isSignedIn() &&
        (resource.data.ownerId == request.auth.uid ||
         request.auth.uid in resource.data.members);
      allow create: if isSignedIn() &&
        request.resource.data.ownerId == request.auth.uid &&
        request.resource.data.members.size() == 1 &&
        request.resource.data.members[0] == request.auth.uid;
      allow update: if isSignedIn() &&
        (resource.data.ownerId == request.auth.uid ||
         (request.auth.uid in request.resource.data.members &&
          request.resource.data.inviteCode == resource.data.inviteCode));
      allow delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /updates/{updateId} {
        allow read: if isSignedIn() &&
          request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        allow create: if isSignedIn() &&
          request.resource.data.authorId == request.auth.uid &&
          request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        allow update, delete: if isSignedIn() &&
          request.auth.uid == resource.data.authorId;
      }
    }

    match /activities/{activityId} {
      allow read: if isSignedIn() &&
        (resource.data.visibility == 'public' ||
         resource.data.userId == request.auth.uid);
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    match /healthData/{docId} {
      allow read, write: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    match /bloodWork/{docId} {
      allow read, write: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    match /biosignatures/{docId} {
      allow read, write: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    match /activityLikes/{likeId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    match /activityComments/{commentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    match /follows/{followId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() &&
        request.resource.data.followerId == request.auth.uid;
      allow delete: if isSignedIn() &&
        resource.data.followerId == request.auth.uid;
    }
  }
}
